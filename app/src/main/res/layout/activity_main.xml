<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dump.r00we.leak.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Inner class Leak"
        android:id="@+id/innerClassLeak"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Handler Leak"
        android:id="@+id/handlerLeak"
        android:onClick="onClick"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ResultReceiver leak"
        android:id="@+id/resultReceiverLeak"
        android:onClick="onClick"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Weak ref crash"
        android:id="@+id/weakRefCrash"
        android:onClick="onClick"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Weak ref no leak"
        android:id="@+id/weakRef"
        android:onClick="onClick"
        />

</LinearLayout>
